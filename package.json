{
  "name": "glslx-vscode",
  "description": "A language service for GLSLX",
  "version": "0.1.8",
  "publisher": "evanw",
  "repository": {
    "type": "git",
    "url": "https://github.com/eric-song-nop/coc-glslx"
  },
  "license": "MIT",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "activationEvents": [
    "onLanguage:glslx"
  ],
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "node esbuild.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "main": "./src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-glslx configuration",
      "properties": {
        "coc-glslx.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-glslx extension"
        }
      }
    },
    "languages": [
      {
        "id": "glslx",
        "aliases": [
          "GLSLX",
          "glslx"
        ],
        "extensions": [
          ".glslx"
        ],
        "configuration": "./glslx.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "glslx",
        "scopeName": "source.glslx",
        "path": "./syntaxes/GLSLX.tmLanguage"
      }
    ]
  },
  "dependencies": {
    "glslx": "0.2.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "@types/node": "14.14.22",
    "typescript": "^4.1.2"
  }
}